@using TodoApp.Models
@model TodoApp.Todo
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <a class="btn btn-info" href="/Todo/Show">Show list</a>
    <br />
    <br />
    <form method="post" class="row g-3">
        <div>
            <div class="col-auto">
                <label for="title" class="visually-hidden">Title</label>
                <input type="text" class="form-control" name="Title" id="title" value="@Model.Title">
            </div>
            <br />
            <div class="col-auto">
                <label for="desc" class="visually-hidden">Description</label>
                <input type="text" class="form-control" value="@Model.Description" name="Description" id="desc" placeholder="Description">
            </div>
            <br />
            <div class="col-auto">
                <label for="deadline" class="visually-hidden">Deadline</label>
                <input type="datetime-local" value="@Model.Deadline.ToString("yyyy-MM-dd HH:mm")" class="form-control" name="Deadline" id="deadline">
            </div>

        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-warning mb-3">Edit</button>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
