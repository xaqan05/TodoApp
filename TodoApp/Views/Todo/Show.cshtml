@using TodoApp.Models
@model List<TodoApp.Todo>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
    <style>
        .list {
            width: 95%;
            height: 40px;
            border: 1px solid gray;
            font-size: 20px;
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }

        .buttons {
            width: 50%;
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <br />
    <a class="btn btn-primary" href="/Todo/Create">Create</a>
    <br />
    <br />
    <ol>
        @foreach (var item in Model)
        {
            <div class="list">

            <li>@item.Title => @item.Deadline</li>

            <div class="buttons">
                    @if (item.IsDone.Value == true)
        {
            <p style="color:green;">Task ugurla yerine yetirilmisdir.</p>
        }
            @if (item.IsDone.Value == false && item.Deadline > DateTime.Now)
        {
            <p style="color:yellow">Gozlemededir.</p>
        }
        @if (item.IsDone.Value == false && item.Deadline <= DateTime.Now)
        {
            <p style="color:red;">Yerine yetirilmedi.</p>
        }
        @if (item.IsDone.Value == false && item.Deadline > DateTime.Now)
        {
        <a class="btn btn-success" href="/Todo/Finish/@item.Id">Finish</a>
        }
                    <div>
                    <a href="/Todo/Details/@item.Id" class="btn btn-primary">Show</a>
                    <a href="/Todo/Update/@item.Id" class="btn btn-warning">Edit</a>
                    <a href="/Todo/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
            </div>
        }
    </ol>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
